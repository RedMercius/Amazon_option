<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.johnnie.podcastfun" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".baSelectActivity"
            android:label="@string/title_activity_select" >
        </activity>
        <activity
            android:name=".DownloadControl"
            android:label="DownloadActivity" >
        </activity>
        <activity android:name=".PlayActivity" >
        </activity>
        <activity
            android:name=".ComedyActivity"
            android:label="@string/title_activity_comedy"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.johnnie.podcastfun.MainActivity" />
        </activity>
        <activity
            android:name=".SciFiActivity"
            android:label="@string/title_activity_sci_fi"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.johnnie.podcastfun.MainActivity" />
        </activity>
        <activity
            android:name=".ThrillerActivity"
            android:label="@string/title_activity_thriller"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.johnnie.podcastfun.MainActivity" />
        </activity>
        <activity
            android:name=".HorrorActivity"
            android:label="@string/title_activity_horror"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.johnnie.podcastfun.MainActivity" />
        </activity>
    </application>

</manifest>
